<%include ./partials/header%>
<div class="ui main text container segment">
    <div class="ui huge header"><%=blogs.name%></div>
    <div class="ui huge header"><%=blogs.author%></div>
    <div class="ui top attached segment">
        <div class="item">
            <img class="ui centered rounded image" src="<%=blogs.image%>">
            <div class="content">
                 <span><%=blogs.created.toDateString()%></span>
            </div>
            <div class="description">
                <p><%=blogs.body%></p>
            </div>
            <a class="ui orange basic button" href="/blogs/<%=blogs._id%>/<%=blogs.author%>/edit">Edit</a>
            <form id="delete" action="/blogs/<%=blogs._id%>/<%=blogs.author%>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>
<%include ./partials/footer%>